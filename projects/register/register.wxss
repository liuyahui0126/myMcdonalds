/* projects/register/register.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.header image{
  position: relative;
  left: 5%;
  width: 90%;
  height: 400rpx;
  flex: 3;
  margin-top: 40rpx;
}
.bodyer{
  flex: 4;
  width: 90%;
  position: relative;
  left: 5%;
  color: #888;
  font-size: 30rpx;
}
.bodyer .desc{
  margin-bottom: 6rpx;
}
.bodyer .input{
  border: 1px solid #6c6c6c;
  border-radius: 10rpx;
  margin: 20rpx 0rpx;
  padding: 15rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.bodyer .phoneNum text.black{
  width: 80rpx;
  padding-left: 10rpx;
  color: #000;
}
.bodyer .phoneNum input{
  flex: 1;
  padding: 0rpx 20rpx;
}
.bodyer .input button{
  font-size: 30rpx;
  border:none;
}
.bodyer .checkPrm{
  font-size: 28rpx;
}
.bodyer .colorText{
  color: #ffc324;
}
.bodyer .checkPrm checkbox{
  margin-right: 30rpx;
  width: 20rpx;
  height: 20rpx;
}
.footer button{
  background-color: #ffc324;
  margin-bottom: 30rpx;
}