<!--projects/register/register.wxml-->
<view class="container">
  <view class="header">
    <image src='/images/register.jpg'></image>
  </view>
  <view class="bodyer">
    <text class='desc'>验证手机后即可成为麦享会会员,享受消费积分，兑换优惠券</text>
    <view class="input">
      <text class="black">+86   |   </text>
      <input placeholder='请输入手机号' bindinput='phoneNum'></input>
    </view>
    <view class="input">
      <input placeholder='请输入验证码'  bindinput='keyWord'></input>
      <button>获取验证码</button>
    </view>
    <view class="checkPrm">
      <checkbox checked></checkbox>我已阅读并同意i麦当劳的
      <text class="colorText">《使用条款》</text>和
      <text class="colorText">《麦当劳隐私权政策》</text>，加入麦麦童乐会并同意
      <text class="colorText">《使用须知》</text>
    </view>
    <view class='checkPrm'>
      <checkbox checked></checkbox>我已阅读并接受微众银行
      <text class="colorText">《用户协议》</text>，体验i麦当劳小程序完整服务</view>
    <view class='checkPrm'>
      <checkbox checked></checkbox>同意收到优惠促销及通知</view>
  </view>
  <view class="footer">
    <button bindtap='register'>立即注册</button>
  </view>
</view>