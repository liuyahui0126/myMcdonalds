/* projects/registerInfo/registerInfo.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}

.myPhoto {
  flex: 3;
  margin-top: 70rpx;
  text-align: center;
}

.myPhoto image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.info {
  margin-top: 20rpx;
  flex: 3;
}

.info .info-inp{
  display: flex;
  border: 1px solid #6c6c6c;
  border-radius: 10rpx;
  margin: 20rpx 0rpx;
  padding: 25rpx 40rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #6c6c6c;
  font-size: 34rpx;
}
.info .info-inp input{
  padding: 0rpx 30rpx;
}
.info .info-inp picker{
  padding: 0rpx 370rpx 0 40rpx;
  font-size: 34rpx;
}
.info .constellation picker {
  padding: 0rpx 320rpx 0 90rpx;
  
}
.save{
  flex: 4;
}
.save button{
  border-radius: 10rpx;
  margin: 30rpx 0rpx;
  padding: 5rpx 280rpx;
  color: #fff;
  background-color: #888;
}