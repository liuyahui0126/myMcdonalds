<!--projects/index/index.wxml-->
<view class="container">
  <view class="header">
    <view class="header-img">
      <image src='/images/card.png'></image>
    </view>
    <view class="header-title">
      <text>麦有礼</text>
      <text>红包新玩法，限时5元起</text>
    </view>
  </view>
  <view class="bodyer">
    <view class="list" bindtap='myScore'>
      <image src='{{listImgUrl[0]}}'></image>
      <text>我要积分</text>
    </view>
    <view class="list">
      <image src='{{listImgUrl[1]}}'></image>
      <text>积分商城</text>
    </view>
    <view class="list">
      <image src='{{listImgUrl[2]}}'></image>
      <text>开心通告栏</text>
    </view>
    <view class="list">
      <image src='{{listImgUrl[2]}}'></image>
      <text>麦麦儿童会</text>
    </view>
    <view class="list">
      <image src='{{listImgUrl[3]}}'></image>
      <text>麦麦开心跳</text>
    </view>
    <view class="list">
      <image src='{{listImgUrl[4]}}'></image>
      <text>麦麦一起玩</text>
    </view>
  </view>
  <view class="footer">
    <view class="icon" bindtap='menu'>
      <image src='{{iconUrl[0]}}'></image>
      <text class="{{isChange[0]?'same':null}}">首页</text>
    </view>
    <view class="icon" bindtap='scanCode'>
      <image src='{{iconUrl[1]}}'></image>
      <text class="{{isChange[1]?'same':null}}">我的二维码</text>
    </view>
    <view class="icon" bindtap='my'>
      <image src='{{iconUrl[2]}}'></image>
      <text class="{{isChange[2]?'same':null}}">个人信息</text>
    </view>
  </view>
</view>