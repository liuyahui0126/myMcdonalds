/* projects/details/details.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.header{
  flex: 3;
}
.header image{
  width: 90%;
  height: 190px;
  position: relative;
  left: 5%;
  top: 10%;
}
.bodyer{
  flex: 6;
  margin-top: 15px;
}
.bodyer .info{
  padding:  15px 20px 0 20px;
  font-size: 26rpx;
  display: flex;
   justify-content: space-between; 
}
.bodyer .info .title{
  color: #888;
  width: 160rpx;
  display: inline-block;
}
.bodyer .info .detailInfo{
  width: 500rpx;
  color: #4a4a4a;
}
.bodyer .info .detailInfo .circle::before{
  display: inline-block;
  content: '';
  width: 5px;
  height: 5px;
  background-color: #000;
  border-radius: 50%;
  margin-right: 5px;
}
.bodyer .info .sp{
  color: #ffc324;
}
.footer{
  flex: 1;
}
.footer button{
  width: 90%;
  background-color: #ffc324;
  color: #fff;
}